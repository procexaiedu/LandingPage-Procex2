{
  "permissions": {
    "allow": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Skill(frontend-design)",
      "Bash(test:*)",
      "Bash(cat:*)",
      "Bash(dir)",
      "Bash(npm init:*)",
      "Bash(npm install:*)",
      "Bash(move HERO.png publicimageshero.png)",
      "Bash(npm run dev:*)",
      "Bash(dir /b \"C:\\PROCEX-AI-LANDING-PAGE\\app\")",
      "Bash(dir /b \"C:\\PROCEX-AI-LANDING-PAGE\\components\")",
      "Bash(dir /b \"C:\\PROCEX-AI-LANDING-PAGE\\public\")",
      "Bash(tree /L 3 /F C:PROCEX-AI-LANDING-PAGE 2)",
      "Bash(nul)",
      "Bash(npm run build:*)",
      "Bash(echo:*)",
      "Bash(\"C:\\PROCEX-AI-LANDING-PAGE\\components\\effects\\index.ts\")",
      "Bash(dir:*)",
      "Bash(timeout /t 10)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "shadcn"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.tsx ]]; then npx eslint \"$CLAUDE_TOOL_FILE_PATH\" --fix 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.py ]]; then pylint \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.rb ]]; then rubocop \"$CLAUDE_TOOL_FILE_PATH\" --auto-correct 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 .claude/scripts/context-monitor.py"
  }
}
